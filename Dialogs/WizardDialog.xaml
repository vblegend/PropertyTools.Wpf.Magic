<Window
    x:Class="PropertyTools.Wpf.WizardDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PropertyTools.Wpf"
    Title="Wizard"
    Width="600"
    Height="400">
    <DockPanel>
        <StackPanel
            Margin="8"
            HorizontalAlignment="Right"
            DockPanel.Dock="Bottom"
            Orientation="Horizontal">
            <Button
                Name="BackButton"
                Width="72"
                Margin="0,0,8,0"
                Content="&lt;&lt; Back" />
            <Button
                Name="NextButton"
                Width="72"
                Margin="0,0,8,0"
                Content="Next &gt;&gt;"
                IsDefault="True" />
            <Button
                Name="FinishButton"
                Width="72"
                Margin="0,0,8,0"
                Content="Finish" />
            <Button
                Name="CancelButton"
                Width="72"
                Content="Cancel"
                IsCancel="True" />
        </StackPanel>
        <Border
            Height="80"
            Background="White"
            BorderBrush="Black"
            BorderThickness="0,0,0,1"
            DockPanel.Dock="Top" />
        <Border Width="140" DockPanel.Dock="Left" />
        <local:PropertyGrid x:Name="PropertyGrid1" Margin="16" />
    </DockPanel>
</Window>